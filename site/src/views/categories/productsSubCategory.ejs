<!DOCTYPE html>
<html lang="es">
    <%- include('../partials/head') %>
<body>
    <header>
        <%- include('../partials/header') %>
        <%- include('../partials/categoriesCarousel') %>
        <%- include('../partials/searcher') %>
    </header>

    <div class="titulo-subcategoria"><%- categoryName %> / <%- subCategoryName %></div>
    <div class="subcategoria-container">
        <% products.forEach(product => { %>
            <div class="producto-contenedor">
                <div class="producto-contenedor-secundario">
                    <div class="producto-header">
                        <div class="producto-descuento"><%= product.discount%>%
                        </div>
                        <div class="producto-favorito">&#9829
                        </div>
                    </div>
                    <div class="producto-imagen">
                        <img src= "<%= product.image%>.png" loading="lazy" >
                    </div>
                    <div class="producto-footer">
                        <p class="producto-detalle"> <%= product.brand%> </p>
                    </div>
                    <div class="producto-footer">
                        <p class="producto-detalle"> <%= product.description%> </p>
                    </div>
                    <p class="producto-presentacion"> x <%= product.display%></p>
                    <div class="producto-precios">
                        <p class="precio-competencia"> <%= product.precioCompetencia%> </p>
                        <p class="precio-nuestro"> <%= product.price%> </p>
                    </div>
                </div>
                <div class="producto-agregar">Agregar</div>
            </div>
            <% });%>
    </div>

</body>
</html>