<!DOCTYPE html>
<html lang="es">
    <%- include('../partials/head') %>
<body>
    <header>
        <%- include('../partials/header') %>
        <%- include('../partials/categoriesCarousel') %>
        <%- include('../partials/searcher') %>
    </header>
















    <div class="titulo-subcategoria"><%- categoryName %> / <%- subCategoryName %></div>
    <div class="subcategoria-container">
        <% products.forEach(product => { %>

            <div class="producto-contenedor">
                <div class="producto-contenedor-secundario">
                    <div class="producto-header">
                        <div class="producto-descuento"><%= product.discount%>
                        </div>
                        <div class="producto-favorito"><!--<i class="fas fa-heart">--><i class="far fa-heart"></i>
                        </div>
                    </div>
                    <div class="producto-imagen">
                        <img src= "<%= product.image%>.png" >
                    </div>
                    <div class="producto-footer">
                        <div class="producto-titulo">
                            <p class="producto-detalle"> <%= product.brand%><%= product.description%>
                            <span class="producto-presentacion"> x <%= product.display%></span>
                            </p>
                        </div>
                        <div class="producto-precios">
                            <span class="precio-nuestro"> <%= product.price%>
                            <span class="precio-competencia"> <%= product.competitorPrice%> </span>
                            </span>
                        </div>
                        <div class="boton-agregar">Agregar</div>
                    </div>
                </div>
            </div>














            <% });%>
    </div>

</body>
</html>