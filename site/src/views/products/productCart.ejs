<!DOCTYPE html>
<html lang="es">
    <%- include('./../partials/head') %>
<body>
    <header>
        <%- include('../partials/header') %>
        <%- include('../partials/categoriesCarousel') %>
        <%- include('../partials/searcher') %>
    </header>
    <div id="carritoYcheckbox">
        <div id="carritoListaYtotal" class="carritoListaYtotal" >
            <div class="productosEnCarrito">
                <div class="contenedorProducto">
                    <% products.forEach(product => { %>
                        <div class="carrito-item-descripcion">
                            <div class="imagenProductoCarrito">
                                <img src= "<%= product.product.image%>.png">
                            </div>
                            <div class="carrito-detallesProducto">
                                <p class="producto-detalle"> <%= product.product.brand%> </p>
                                <p class="producto-detalle"> <%= product.product.description%> </p>
                                <p class="producto-presentacion">  <%= product.product.display%></p>
                                <p class="precio-nuestro">  <%= product.product.price%> </p>
                                <!-- <p class="precio-competencia">  -->
                                <!-- <p class="producto-presentacion">  </p> -->
                                <div class="producto-agregar"> - <%= product.quantity%> +</div>                        
                            </div>
                        </div>
                        <div class="carrito-subtotalProducto">
                            <p>Subtotal:</p>
                            <p class="precio-nuestro"> <%= product.product.price * product.quantity%> </p>
                        </div>
                    <% }) %>
                </div>
            </div>
            
            <div class="detalleTotal-contenedor">
                <div class="detalleTotalTitulo">
                    <p class="detalle-del-precio-total">Detalle del precio</p>
                </div>
                <div class="subtotales">
                    <div class="subtotal">
                        <p>Subtotal</p>
                        <p>$272,00</p>
                    </div>
                    <div class="gastosEnvio">
                        <p>Cargos de env√≠o</p>
                        <p class="precio-nuestro">Gratis</p>
                    </div>    
                </div>
                <div class="total-a-abonar">
                    <p>Total a abonar</p>
                    <p>$272,00</p>
                </div>
                <div class="ahorro-total">
                    <p>En esta compra ahorraste: $60</p>
                </div>
            </div>
        </div>
    <div class="checkout">
        <p>$272,00</p>
        <div class="producto-agregar">Continuar</div> 
    </div></div>
    </div>
</body>
</html>