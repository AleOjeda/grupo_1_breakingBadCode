<!DOCTYPE html>
<html lang="es">

<%- include('./partials/head') %>

<body>
    <header>
    <%- include('partials/header') %>
    <%- include('partials/categoriesCarouselDesktop') %>
    </header>
    <div class="container">
        <div id="home-catalogo">
            <% categories.forEach(category => { %>
            <div id="catalogo-categoria">
                <div class="catalogo-header">
                    <div class="catalogo-header-titulo"><%= category.nombreCategoria%></div>
                    <a class="catalogo-header-vertodo" href="/categorias/<%=category.ruta%>"><div class="">Ver todo ></div></a>
                </div>
                <div class="catalogo-contenedor">
                    <% products.forEach(product => { %>
                    <div class="producto-contenedor">
                        <div class="producto-contenedor-secundario">
                            <div class="producto-header">
                                <div class="producto-descuento"><%= product.descuento%>
                                </div>
                                <div class="producto-favorito"><!--<i class="fas fa-heart">--><i class="far fa-heart"></i>
                                </div>
                            </div>
                            <div class="producto-imagen">
                                <img src= <%= product.imagen%> >
                            </div>
                            <div class="producto-footer">
                                <div class="producto-titulo">
                                    <p class="producto-detalle"> <%= product.nombre%>
                                    <span class="producto-presentacion"> x <%= product.presentacion%></span>
                                    </p>
                                </div>
                                <div class="producto-precios">
                                    <span class="precio-nuestro"> <%= product.precio%>
                                    <span class="precio-competencia"> <%= product.precioCompetencia%> </span>
                                    </span>
                                </div>
                                <div class="boton-agregar">Agregar</div>
                            </div>
                        </div>
                    </div>
                    <% });%>
                </div>
            </div>
            <% });%>
        </div>
    </div>
</body>
</html>