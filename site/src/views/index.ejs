<!DOCTYPE html>
<html lang="es">

<%- include('./partials/head') %>

<body>
    <header>
    <%- include('partials/header') %>
    <%- include('partials/categoriesCarousel') %>
    <%- include('partials/searcher') %>
    </header>
    <content>
        <div id="home-catalogo">
            <% categories.forEach(category => { %>
            <div id="catalogo-categoria">
                <div class="catalogo-header">
                    <div class="catalogo-header-titulo"><%= category.nombreCategoria%></div>
                    <a class="catalogo-header-vertodo" href="/categorias/<%=category.ruta%>"><div class="">Ver todo ></div></a>
                </div>
                <div class="catalogo-contenedor">
                    <% products.forEach(product => { %>
                    <div class="producto-contenedor">
                        <div class="producto-contenedor-secundario">
                            <div class="producto-header">
                                <div class="producto-descuento"><%= product.descuento%>
                                </div>
                                <div class="producto-favorito">&#9829
                                </div>
                            </div>
                            <div class="producto-imagen">
                                <img src= <%= product.imagen%> >
                            </div>
                            <div class="producto-footer">
                                <p class="producto-detalle"> <%= product.nombre%> </p>
                            </div>
                            <p class="producto-presentacion"> x <%= product.presentacion%></p>
                            <div class="producto-precios">
                                <p class="precio-competencia"> <%= product.precioCompetencia%> </p>
                                <p class="precio-nuestro"> <%= product.precio%> </p>
                            </div>
                        </div>
                        <div class="producto-agregar">Agregar</div>
                    </div>
                    <% });%>
                </div>
            </div>
        </div>
        <% });%>
    </content>
</body>
</html>